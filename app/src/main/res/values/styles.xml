<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/v15dp</item>
        <item name="android:layout_marginTop">@dimen/v15dp</item>
        <item name="android:layout_marginEnd">@dimen/v15dp</item>
        <item name="android:paddingBottom">@dimen/v4dp</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/tv22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextHValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/graytoblackColor</item>
        <item name="android:textSize">@dimen/tv15sp</item>
    </style>

    <style name="TextHeaderH">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:textColor">@color/blackColor</item>
    <item name="android:textSize">@dimen/tv15sp</item>
    <item name="android:textStyle">bold</item>
</style>

    <style name="TextValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">@dimen/tv15sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/graytoblackColor</item>
    </style>

    <style name="HeadError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/v20dp</item>
        <item name="android:paddingLeft">@dimen/v20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/tv30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/v20dp</item>
        <item name="android:paddingLeft">@dimen/v20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/tv20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
